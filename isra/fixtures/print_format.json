  "font_size": 14,
  "format_data": null,
  "html": "<!DOCTYPE html>\r\n<html>\r\n\r\n<head>\r\n    <style>\r\n        .header-container {\r\n            display: flex;\r\n            justify-content: space-between;\r\n            align-items: center;\r\n            width: 100%;\r\n            padding-bottom: 10px;\r\n        }\r\n\r\n        .company-section {\r\n            display: flex;\r\n            flex-direction: column;\r\n        }\r\n\r\n        .company-logo {\r\n            width: 180px;\r\n            height: 60px;\r\n        }\r\n\r\n        .company-info {\r\n            margin-top: 5px;\r\n            font-size: 11px;\r\n        }\r\n\r\n        .invoice-title {\r\n            font-size: 24px;\r\n            font-weight: bold;\r\n            text-align: right;\r\n        }\r\n\r\n        .invoice-number {\r\n            font-size: 14px;\r\n            font-weight: bold;\r\n        }\r\n\r\n        .billing-details {\r\n            display: flex;\r\n            justify-content: space-between;\r\n            width: 100%;\r\n            margin-top: 20px;\r\n        }\r\n\r\n        .bill-to {\r\n            width: 50%;\r\n        }\r\n\r\n        .bill-to strong {\r\n            font-size: 16px;\r\n        }\r\n\r\n        .invoice-details {\r\n            width: 50%;\r\n            text-align: right;\r\n        }\r\n\r\n        .invoice-details span {\r\n            font-weight: bold;\r\n        }\r\n\r\n        table {\r\n            width: 100%;\r\n            border-collapse: collapse;\r\n        }\r\n\r\n        th,\r\n        td {\r\n            border: 1px solid #ddd;\r\n            padding: 8px;\r\n            text-align: center;\r\n        }\r\n\r\n        th {\r\n            background-color: #333;\r\n            color: white;\r\n            /* Ensures white text for all headers */\r\n            font-weight: bold;\r\n        }\r\n\r\n        .item-description {\r\n            text-align: left;\r\n            font-weight: bold;\r\n        }\r\n\r\n        .uom {\r\n            font-size: 12px;\r\n            color: gray;\r\n        }\r\n\r\n        .bank-details {\r\n            width: 50%;\r\n            /* Takes 50% of the space */\r\n            font-size: 14px;\r\n            padding: 10px;\r\n            margin-bottom: 15px;\r\n        }\r\n\r\n        .receiver-signature {\r\n            margin-top: 20px;\r\n            font-weight: bold;\r\n        }\r\n\r\n        .signature-line {\r\n            display: inline-block;\r\n            width: 200px;\r\n            border-bottom: 1px solid black;\r\n            margin-left: 10px;\r\n        }\r\n    </style>\r\n</head>\r\n\r\n<body>\r\n    <div class=\"header-container\">\r\n        <div class=\"company-section\">\r\n            <img src=\"/private/files/WhatsApp Image 2025-03-04 at 22.25.32_3d640b98.jpg\" class=\"company-logo\" />\r\n        </div>\r\n        <div class=\"invoice-title\">\r\n            TAX INVOICE\r\n            <div class=\"invoice-number\"># {{ doc.name }}</div>\r\n        </div>\r\n    </div>\r\n    <div class=\"company-info\">\r\n        <strong>{{ doc.company }}</strong><br>\r\n        TRN: 100041847300003<br>\r\n        P.O. Box: 300058<br>\r\n        Warehouse No. 9, 4B Street Ras Al Khor, Dubai, U.A.E<br>\r\n        Phone :+971 42868188,Email:operations@alisra.co<br>\r\n        website :www.israuae.com\r\n    </div><br><br>\r\n    <div class=\"billing-details\">\r\n        <div class=\"bill-to\">\r\n            <p>Bill To</p>\r\n            <strong style=\"font-size: 10px;\">{{ doc.customer }}</strong><br>\r\n            <span style=\"font-size: 10px;\">\r\n                {{ frappe.db.get_value(\"Customer\", {\"name\": doc.customer}, \"tax_id\") or \"\" }}\r\n            </span>\r\n            {% set get_address = frappe.db.get_value(\"Address\",{\"name\":doc.customer_address}, [\"address_title\",\"address_line1\",\"address_line2\",\"city\",\"country\",\"pincode\"]) %}\r\n            <span style=\"font-size: 10px;\">{{ get_address[0] or \"\" }}</span><br>\r\n            <span style=\"font-size: 10px;\">{{ get_address[1] or \"\" }}</span><br>\r\n            <span style=\"font-size: 10px;\">{{ get_address[2] or \"\" }}</span><br>\r\n            <span style=\"font-size: 10px;\">{{ get_address[3] or \"\" }}</span><br>\r\n            <span style=\"font-size: 10px;\">{{ get_address[4] or \"\" }}</span><br>\r\n            <span style=\"font-size: 10px;\">{{ get_address[5] or \"\" }}</span><br>\r\n        </div>\r\n        <div class=\"invoice-details\">\r\n            <p><span>Invoice Date: </span> {{ frappe.utils.formatdate(doc.posting_date, \"dd-MM-yyyy\") }}</p>\r\n            <p><span>Terms: </span> Due On Receipt</p>\r\n            <p><span>Sales Person: </span>\r\n                {{ frappe.db.get_value(\"User\", {\"name\": doc.owner}, \"full_name\") or \"\" }}\r\n            </p>\r\n        </div>\r\n    </div>\r\n    <div>\r\n        {% set get_warehouses = frappe.db.get_all(\"Warehouse\", {\"custom_is_mobile_warehouse\": 1}, [\"name\"]) %}\r\n\r\n        {% for warehouse in get_warehouses %}\r\n        {% set custom_location = frappe.db.get_value(\"Warehouse Location Child\", {\"parent\": warehouse.name}, \"location\")\r\n        or 0 %}\r\n        {% if custom_location == doc.custom_location %}\r\n        {% set warehouse_name = frappe.db.get_value(\"Warehouse\", warehouse.name, \"custom_print_format_warehouse_name\")%}\r\n        <p>{{warehouse_name }}</p>\r\n        {% endif %}\r\n        {% endfor %}\r\n    </div><br>\r\n    <table>\r\n        <thead>\r\n            <tr>\r\n                <th style=\"color: white;\">#</th>\r\n                <th style=\"color: white;\">Item & Description</th>\r\n                <th style=\"color: white;\">UOM</th> <!-- Ensures white font -->\r\n                <th style=\"color: white;\">Qty</th>\r\n                <th style=\"color: white;\">Rate</th>\r\n                <th style=\"color: white;\">Tax %</th>\r\n                <th style=\"color: white;\">Tax</th>\r\n                <th style=\"color: white;\">Amount</th>\r\n            </tr>\r\n        </thead>\r\n        <tbody>\r\n            {% set tax_rate = frappe.db.get_value(\"Sales Taxes and Charges\", {\"parent\": doc.name}, \"rate\") or 0 %}\r\n            {% for item in doc.items %}\r\n            {% set tax_amount = (item.rate * tax_rate) / 100 %}\r\n            {% set total_amount = item.rate + tax_amount %}\r\n            <tr>\r\n                <td>{{ loop.index }}</td> <!-- Auto-increment row numbers -->\r\n                <td style=\"font-size: 10px;\">{{ item.item_name }}</td>\r\n                <td style=\"font-size: 10px;\">{{ item.uom }}</td> <!-- Separate column for UOM -->\r\n                <td style=\"font-size: 10px;\">{{ item.qty }}</td> <!-- Quantity -->\r\n                <td style=\"font-size: 10px;\">{{ \"%.2f\"|format(item.rate) }}</td>\r\n                <!-- Rate per unit (2 decimal places) -->\r\n                <td style=\"font-size: 10px;\">{{ \"%.2f\"|format(tax_rate) }}</td> <!-- Tax Rate (2 decimal places) -->\r\n                <td style=\"font-size: 10px;\">{{ \"%.2f\"|format(tax_amount) }}</td> <!-- Tax Amount (2 decimal places) -->\r\n                <td style=\"font-size: 10px;\">{{ \"%.2f\"|format(total_amount) }}</td>\r\n            </tr>\r\n            {% endfor %}\r\n        </tbody>\r\n    </table><br>\r\n    <div align=\"right\">\r\n        <div>\r\n            <p><strong>Sub Total:</strong> <span>&emsp;&emsp;&emsp;{{\"%.2f\"|format(doc.total) }}</span></p>\r\n            <p><strong>Standard Rate (5%):</strong>\r\n                <span>&emsp;&emsp;&emsp;&emsp;{{\"%.2f\"|format(doc.total_taxes_and_charges) }}</span></p>\r\n\r\n            <div style=\"background-color: black; padding: 10px; font-weight: bold;\">\r\n                <span style=\"color: white;\">Total:&emsp;</span>\r\n                <span class=\"total-amount\" style=\"color: white;\">AED {{\"%.2f\"|format(doc.grand_total) }}</span>\r\n            </div>\r\n\r\n            <p class=\"total-words\">\r\n                <strong>Total In Words:</strong>\r\n                {{ frappe.utils.money_in_words(doc.grand_total) }}\r\n            </p>\r\n        </div>\r\n    </div>\r\n\r\n\r\n\r\n    <div class=\"bank-details\">\r\n        <p><strong>Bank Name:</strong> RAK BANK</p>\r\n        <p><strong>Account Name:</strong> ISRA TRADING LLC</p>\r\n        <p><strong>Account No:</strong> 0882236449003</p>\r\n        <p><strong>Swift Code:</strong> NRAKAEAK</p>\r\n        <p><strong>IBAN No:</strong> AE290400000882236449003</p>\r\n    </div>\r\n\r\n    &emsp;<p class=\"receiver-signature\">Receiver's Signature <span class=\"signature-line\"></span></p>\r\n</body>\r\n\r\n</html>",
